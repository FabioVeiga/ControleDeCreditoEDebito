@model UsuarioModel
<!-- Verifica se o TempData eh verdade -->
@{
    //nao utiliza o layout do shared
    //foi criado uma copia do layout para utilizacao do bootstrap e resto
    Layout = "../Shared/_LayoutLogin.cshtml";
}
<div style="text-align:center;"><img src="~/images/logo.png" style="width:250px;" /></div>
<div class="container" style="background-color:rgba(202, 202, 202, 0.80); border-radius:10px; padding:20px; width:450px;">
    @{ try
        {
            if (@TempData["MensagemLoginInvalida"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Atencao!</strong> @TempData["MensagemLoginInvalida"]
                </div>
            }
        }
        catch { }}
    <h4>Registrar minha conta</h4>
    <form asp-controller="Usuario" asp-action="Registrar" novalidate>
        <div class="form-group">
            <label for="Nome">*Nome:</label>
            <input type="text" class="form-control" asp-for="Nome">
            @*apos colocar o Required na controller, add o span abaixo*@
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="email">*Email:</label>
            <input type="email" class="form-control" asp-for="Email">
            @*apos colocar o Required na controller, add o span abaixo*@
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="pwd">*Senha:</label>
            <input type="password" class="form-control" asp-for="Senha">
            @*apos colocar o Required na controller, add o span abaixo*@
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="DataNascimento">*Data de Nascimento:</label>
            <input type="date" class="form-control" asp-for="Data_Nasimento">
            @*apos colocar o Required na controller, add o span abaixo*@
            <span asp-validation-for="Data_Nasimento" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-block btn-success">Registrar</button>
        <a href="Login" type="button" class="btn btn-info btn-block">Voltar para login</a>
    </form>
</div>