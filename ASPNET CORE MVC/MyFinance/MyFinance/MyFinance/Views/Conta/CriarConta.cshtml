@*importar o modelo da conta*@
@model  ContaModel

@{
    ViewData["Title"] = "CriarConta";
}

<h3>Criar Conta</h3>

<form asp-controller="Conta" asp-action="CriarConta">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" asp-for="Nome">
        @*apos colocar o Required na controller, add o span abaixo*@
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Saldo">Saldo:</label>
        <input type="text" class="form-control" asp-for="Saldo">
        @*apos colocar o Required na controller, add o span abaixo*@
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>

